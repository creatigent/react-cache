{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "jest": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "import/no-unresolved": 0,
        "no-console": 1,
        "no-unused-vars": 1,
        "quotes": [ "warn", "single" ],
        "react/jsx-uses-react": 1,
        "react/jsx-no-undef": 2,
        "react/jsx-wrap-multilines": 2,        
        "semi": 1,
        "valid-jsdoc": 2
    },
    "plugins": [
        "import",
        "react"
    ]
}